{
  "name": "petsos",
  "version": "0.0.1",
  "main": "index.js",
  "author": "Bennett Clement",
  "license": "MIT",
  "scripts": {
    "start": "lerna run start --stream",
    "postinstall": "yarn build:front && yarn build:back",
    "build:front": "(cd packages/front && yarn && yarn build)",
    "build:back": "(cd packages/back && yarn && yarn build)",
    "start:front": "(cd packages/front && yarn start)",
    "start:back": "(cd packages/back && yarn start)"
  },
  "engines": {
    "node": "12.x"
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "lerna": "^3.22.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lerna run --concurrency 1 --stream precommit"
    }
  }
}
